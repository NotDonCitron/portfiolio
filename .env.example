# ========================================
# üìñ FRONTEND ENVIRONMENT VARIABLES
# ========================================

# Backend API URL (Local Flask proxy for HuggingFace)
VITE_API_URL=http://localhost:5000

# Hugging Face API Token (Backend only - not exposed to browser)
# Get your token here: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here_replace_with_your_actual_token

# Hugging Face Model Configuration (Using Pro for best performance)
HF_MODEL=HuggingFaceTB/SmolLM3-3B

# Deprecated: Now using backend proxy instead
# VITE_HF_API_TOKEN=hf_your_token_here_replace_with_your_actual_token
# VITE_HF_CHAT_MODEL=HuggingFaceTB/SmolLM3-3B
# VITE_HF_VISION_MODEL=microsoft/Florence-2-base
# VITE_HF_API_URL=https://api-inference.huggingface.co

# Enable/Disable Features (Feature Flags)
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_IMAGE_ANALYSIS=true
VITE_ENABLE_ENHANCED_COMPARE=true

# Development Settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# ========================================
# üêç BACKEND ENVIRONMENT VARIABLES
# ========================================

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=true

# CORS Configuration (Allow frontend to access backend)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# ü§ñ HUGGING FACE API CONFIGURATION
# ========================================

# Your Hugging Face Access Token (for Inference API)
HF_API_TOKEN=hf_your_token_here_replace_with_your_actual_token

# Model Settings (SmolLM3 for Chatbot - 3B params, fast, efficient)
HF_CHAT_MODEL=HuggingFaceTB/SmolLM3-3B

# Vision Model Settings (Florence-2 for Image Analysis)
HF_VISION_MODEL=microsoft/Florence-2-base

# Inference Parameters (Optimized with Pro benefits)
HF_MAX_TOKENS=250
HF_TEMPERATURE=0.7
HF_TOP_P=0.9
HF_DO_SAMPLE=true

# ZeroGPU Configuration (Pro Feature - Faster inference)
HF_USE_ZERO_GPU=true

# ========================================
# üìä ANALYTICS CONFIGURATION
# ========================================

# Simple page view counter (Optional)
ENABLE_PAGE_COUNTER=true

# Analytics Provider (when ready)
# Options: 'umami', 'plausible', 'none'
ANALYTICS_PROVIDER=none

# ========================================
# üñºÔ∏è IMAGE COMPARE TOOL CONFIGURATION
# ========================================

# Flask Secret Key (for backend security)
FLASK_SECRET_KEY=your_random_secret_key_here_generate_long_random_string

# OpenCV Configuration
OPENCV_THREADS=4
OPENCV_MAX_IMAGE_SIZE=4096

# Upload Limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=png,jpg,jpeg,webp

# ========================================
# üöÄ DEPLOYMENT SETTINGS
# ========================================

# Application Title
APP_NAME=Pascal Hintermaier - AI & Automation
APP_URL=http://localhost:5173

# Contact Information
CONTACT_EMAIL=pascal.hintermaier@example.com
CONTACT_GITHUB=https://github.com/yourusername
CONTACT_LINKEDIN=https://linkedin.com/in/pascal-hintermaier

